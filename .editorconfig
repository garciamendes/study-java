root = true

# Configurações padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120

# Regras específicas para arquivos Java
[*.java]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120

# Ajustes para arquivos Markdown (manter quebras intencionais)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configurações para YAML/JSON/Gradle/XML/Properties (mais sensíveis a indentação)
[*.{yml,yaml,json,xml,gradle,properties}]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120
